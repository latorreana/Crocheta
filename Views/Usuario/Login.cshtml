@model Usuario

<form method="POST" asp-action="Login">
    <div align="center">

        <div class="loginBox">
            <h3>Informe seus dados para entrar:</h3>
            <p>
            <p>Login:</p>
            <input asp-for="login">
            </p>
            <p>
            <p>Senha:</p>
            <input asp-for="senha">
            </p>
            <p>
                <input type="submit" value="Acessar">
            </p>
        </div>
    </div>
</form>
<p id="Mensagem" text-align="center" style="color: red">@ViewBag.Mensagem</p>